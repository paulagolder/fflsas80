{# views/location/showone.html.twig #}

{% extends 'user.html.twig' %}

{% block stylesheets %}
      {{ parent() }}
   <link href="{{ asset('/css/linkrefs/showone.css') }}" rel="stylesheet" />
   <link rel="stylesheet" href="https://unpkg.com/leaflet@1.3.1/dist/leaflet.css"
   integrity="sha512-Rksm5RenBEKSKFjgI3a41vrjkw4EVPlJ3+OiI65vTjIdo9brlAacEuKOiQ5OFh7cOI1bkDwLqdLw3Zg0cRJAAQ=="
   crossorigin=""/>
{% endblock %}
{% block js %}
 {{ parent() }}
    <script src="https://unpkg.com/leaflet@1.3.1/dist/leaflet.js"
   integrity="sha512-/Nsx9X4HebavoBvEBuyp3I7od5tA0UzAxs+j83KgC8PU0kgB4XiK4Lfe4y4cgBtaRJQEIFCW+oC506aPT2L1zw=="
   crossorigin="">
   </script>
 
{% endblock %}

{% block myheader %} {{ parent() }}{% endblock %}


{% block middle %}
<div id="middle" >
   {% if message %}
     <h1> {{message}}</h1>
   {% endif %}

   {% if ref %}
     
      
      {% if ref.doctype == "html" %}
      {{ include( ref.path)   }}
      
      {% else %}
       <div>
      <h1>{{ ref.label }}</h1>
      <div class="path" target="_map" > {{ref.path}} : {{ref.doctype}}</div>
      </div>
      {% endif %}
     
      {% if texts and texts["FR"] %}
       <div class="text" >
            {{ texts["FR"] | raw }}
       </div>
      {% endif %}
      
      <div class="content">
      {{ display }}
      </div>
      
  {% endif %}
  </div>
{% endblock %}
