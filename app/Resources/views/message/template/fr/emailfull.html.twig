{# views/message/template/fr/emailfull.html.twig #}
{#  TEMPLATE FRANCAIS #}

<html>
<style>
div.bodytext { font-size:12pt; color:black;}
div.link { font-size:12pt;  text-align: center;  }
div.messageheading div.label { font-size:14pt; text-align: center; text-weight : bold; color: black }
div.mailmessage{background-color:#afc0db;}
div.mailfooter table {width : 100%;background-color: #98b9ed;color:white;}
div.mailheader table {width : 100%;background-color: #98b9ed;color:white;}
div.mailfooter table tr td.middle {color:white;}
div.mailfooter table tr td {text-align:center;width:33%;}
div.mailfooter a, a:visited, a:hover, a:active {
  color: blue;
}
div.mailheader table tr td.middle {text-align:center;width:33%;}
div.mailheader table tr td.right{text-align:right;width:33%;} 
div.mailmessage table tr td.label{color:yellow; width:10em;} 
div.mailmessage table tr td.title{color:blue;} 
div.body { padding:3em; }
</style>

<div id= "usermessage" >

{% include '/message/template/fr/emailheader.html.twig'    %}

<div class="mailmessage">
<table  >
 <tr><td class="label" >Envoyée par</td><td class="title"> {{ message.fromname }} ({{message.fromemail}})</td></tr>
<tr><td class="label" >Date envoyée</td><td class="title"> {{ message.date_sent  | date("Y-m-d H:i:s")}}</td></tr>
{% if message.bcc is iterable %}
   <tr><td class="label" >Message envoyée a</td><td class="title" > {{message.toname}} </td></tr>
{% else %}
<tr><td class="label" >Message envoyée a</td><td class="title" > {{message.toname}} ({{message.toemail}})</td></tr>
{% endif %}
</table>
<div class="body">
{{ message.body | raw }}
</div>
</div>
{{footer | raw}}
</div>
</html>
