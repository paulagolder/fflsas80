{% block middle %}
<div id="middle" >
  <div id="url" >
   {% if message or message != '' %}
     <h1> {{message}}</h1>
{% endif %}
  
   <div class="heading">
     <div class="label">
      {{'a.link.to'|trans}} 
     </div>
     <div class="title">
      {{ url.label }}
     </div>
  
      <div class="returnbutton button1"> <a href = "/{{lang}}/url/show/all">{{'.back'|trans }} </a> </div>
