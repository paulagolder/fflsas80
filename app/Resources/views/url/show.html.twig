             <div class="editbutton" > <a class="editbutton" href="/admin/url/edit/{{url.id}}" >{{"edit.link"|trans }} </a> </div>
            {% endif %}
  </div>

<div  class="datatable" >
<div class="datarow">
<div class="label"> {{'.title'|trans }}</div>
<div class ="data" >{{url.label}}</div>
</div>
<div class="datarow">
<div class="label"> {{'.url'|trans }}</div>
<div class ="data" >{{url.url}}</div>
</div>
<div class="datarow">
<div class="label"> {{'.tags'|trans }}</div>
<div class ="data" >{{url.tags}}</div>
</div>
</div>

<div class="visitbutton">
<div class="returnbutton" > <a href="{{url.url}}"  target="_blank" >{{'.visit'|trans}}</a></div>
</div>
