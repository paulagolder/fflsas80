{# views/url/urlsearch.html.twig #}

{% extends 'admin.html.twig' %}

{% block stylesheets %}
      {{ parent() }}
   <link href="{{ asset('css/searchall.css') }}" rel="stylesheet" />
{% endblock %}

{% block middle %}
<div id="middle" >
  <div id="url" class="search" >
   {% if message %}
     <h1> {{message}}</h1>
   {% endif %}
    <div class="heading">
      <div class="label"> {{ heading|trans }}</div>
      <div class="editbutton button1"><a class="editbutton" href ="/admin/url/edit/0">{{'new.url'|trans}}</a></div>
   </div>
  <form  action="/admin/url/search">
  <div class="heading">
   <div class="label"> {{'enter.search'|trans }}</div>
   <input type="text" name="searchfield">
   <input type="submit" value="{{'.search'|trans }}" >
   </div>
   </form>
 
   {% if urls is defined %}
     <div class="subheading">
     <div class="label">{{subheading|trans}}</div> 
     <div class="title">{{searchfield}}</div> 
     </div>
     <div class="searchlist" >
         {% for url in urls  %}
            <div class="search row" >
             <div>{{url.label}}</div> 
             <div class="editbutton button1"><a class="editbutton" href="/admin/url/addbookmark/{{url.id}}">{{'.bookmark'|trans}}</a></div>
             <div class="editbutton "><a class="editbutton" href="/{{lang}}/url/visit/{{url.id}}">{{'see.content'|trans}}</a></div>
            </div>
         {% endfor %}
     </div>
  {% endif %}
  </div>
  </div>
{% endblock %}


{% block right %}



   {{ render(controller('AppBundle\\Controller\\BookmarkController::setfield'))}}

{% endblock%}
