{# views/biblo/biblosearch.html.twig #}

{% extends 'admin.html.twig' %}

{% block stylesheets %}
      {{ parent() }}
   <link href="{{ asset('css/searchall.css') }}" rel="stylesheet" />
{% endblock %}

{% block middle %}
<div id="middle" >
  <div id="search" class="search">
   {% if message %}
     <h1> {{message}}</h1>
   {% endif %}
   <div class="heading">
      <div class="label"> {{ heading|trans }}</div>
      <div class="editbutton button1"><a class="editbutton" href ="/admin/biblo/edit/0">{{'new.book'|trans}}</a></div>
   </div>
  <form  action="/admin/biblo/search">
  <div class="row">
   <div class="label"> {{'enter.search'|trans }}</div>
   <input type="text" name="searchfield">
   <input type="submit" value="{{'.search'|trans }}" >
   </div>
   </form>

   {% if contents is defined %}
     <div class="subheading">
     <div class="label">{{subheading|trans}}</div> 
     <div class="title">{{searchfield}}</div> 
     </div>
     <div class="searchlist" >
         {% for content in contents  %}
            <div class="search row" >
             <div>{{content.title}}</div> 
             <div class="editbutton button1"><a class="editbutton" href="/admin/biblo/addbookmark/{{content.bookid}}">{{'.bookmark'|trans}}</a></div>
             <div class="editbutton "><a class="editbutton" href="/{{lang}}/biblo/show/{{content.bookid}}">{{'see.content'|trans}}</a></div>
            </div>
         {% endfor %}
     </div>
  {% endif %}
  </div>
  </div>
{% endblock %}



